<?xml version="1.0" encoding="utf-8"?>
<mvc:View
    controllerName="com.company.trattativecontrattuali.trattativecontrattuali.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page title="Attivazione Trattative Contrattuali" showNavButton="true" navButtonPress="onNavBack">
        
        <!-- Header con info richiesta -->
        <content>
            <VBox class="sapUiMediumMargin">
                
                <!-- Info Header -->
                <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiMediumMarginBottom">
                    <VBox>
                        <Title text="Modulo TTCT - Nuova richiesta importazione" level="H2"/>
                    </VBox>
                    <HBox spacing="1rem">
                        <Text text="Bozza - Importazione"/>
                        <Text text="ID: TTCT-2024-NEW"/>
                    </HBox>
                </HBox>
                
                <!-- Progress Section -->
                <VBox class="sapUiMediumMarginBottom">
                    <HBox justifyContent="SpaceBetween" alignItems="Center">
                        <VBox>
                            <Title text="Avanzamento Compilazione" level="H3"/>
                            <Text text="{/progressText}"/>
                        </VBox>
                        <HBox spacing="1rem">
                            <Button text="Salva Bozza" icon="sap-icon://save" press="onSaveDraft"/>
                            <Button text="Invia a TC" type="Emphasized" icon="sap-icon://email" press="onSubmitToTC"/>
                        </HBox>
                    </HBox>
                </VBox>
                
                <!-- Sezioni del Modulo Title -->
                <Title text="Sezioni del Modulo" level="H3" class="sapUiMediumMarginBottom"/>
                
                <!-- 14 Sezioni Grid -->
                <VBox>
                    
                    <!-- Prima riga: 6 sezioni -->
                    <HBox class="sapUiSmallMarginBottom" spacing="0.5rem">
                        
                        <!-- Sezione 1 - Completata (blu) -->
                        <Button class="sectionTile sectionCompleted" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="1"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://form" size="1.5rem" color="white"/>
                                <Text text="1" class="sectionNumber"/>
                                <Text text="Tipologia della Richiesta" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 2 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="2"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://program-triangles" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="2" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Programma" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 3 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="3"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://shipping-status" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="3" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Tipologia di Movimentazione" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 4 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="4"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://map" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="4" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Località" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 5 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="5"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://supplier" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="5" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Controparte Contrattuale" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 6 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="6"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://document" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="6" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Business/Contratto di Riferimento" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                    </HBox>
                    
                    <!-- Seconda riga: 6 sezioni -->
                    <HBox class="sapUiSmallMarginBottom" spacing="0.5rem">
                        
                        <!-- Sezione 7 - Vuota -->
                        <Button class="sectionTile sectionEmpty" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="7"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://key" size="1.5rem" color="#666"/>
                                <Text text="7" class="sectionNumber"/>
                                <Text text="Autorizzazioni già Ottenute" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 8 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="8"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://product" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="8" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Materiali Interessati" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 9 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="9"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://money-bills" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="9" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Valore Complessivo" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 10 - Vuota -->
                        <Button class="sectionTile sectionEmpty" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="10"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://vehicle" size="1.5rem" color="#666"/>
                                <Text text="10" class="sectionNumber"/>
                                <Text text="Configurazione Velivoli" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 11 - Vuota -->
                        <Button class="sectionTile sectionEmpty" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="11"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://add-equipment" size="1.5rem" color="#666"/>
                                <Text text="11" class="sectionNumber"/>
                                <Text text="Elementi Supplementari" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 12 - Obbligatoria (*) -->
                        <Button class="sectionTile sectionRequired" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="12"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://signature" size="1.5rem" color="#666"/>
                                <HBox>
                                    <Text text="12" class="sectionNumber"/>
                                    <Text text=" *" class="requiredIndicator"/>
                                </HBox>
                                <Text text="Estremi Sottoscrizione" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                    </HBox>
                    
                    <!-- Terza riga: 2 sezioni -->
                    <HBox spacing="0.5rem">
                        
                        <!-- Sezione 13 - Vuota -->
                        <Button class="sectionTile sectionEmpty" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="13"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://attachment" size="1.5rem" color="#666"/>
                                <Text text="13" class="sectionNumber"/>
                                <Text text="Annesso 1" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                        <!-- Sezione 14 - Vuota -->
                        <Button class="sectionTile sectionEmpty" width="150px" height="100px" press="onSectionPress">
                            <customData>
                                <core:CustomData key="section" value="14"/>
                            </customData>
                            <VBox alignItems="Center" justifyContent="Center" height="100%">
                                <core:Icon src="sap-icon://attachment" size="1.5rem" color="#666"/>
                                <Text text="14" class="sectionNumber"/>
                                <Text text="Annesso 2" textAlign="Center" class="sectionTitle"/>
                            </VBox>
                        </Button>
                        
                    </HBox>
                    
                </VBox>
                
            </VBox>
        </content>
        
    </Page>
    
</mvc:View>